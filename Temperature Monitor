public class Main{
    public static void main(String arg[]){
        int temp = 32;
        if (temp > 30){
            System.out.println("It's a hot day");
            System.out.println("Drink water if your are not fasting :)");
        }else if (temp >20)
        System.out.println("Beautiful day");
        else
        System.out.println("Cold day");
    }
}
