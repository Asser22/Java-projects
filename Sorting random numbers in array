import java.util.Arrays;
import java.util.Random;
public class Example {
   public static void main(String[] args) {
      Random rand = new Random(); // creating Random object
      int[] arr = new int[5];
      for (int i = 0; i < arr.length; i++) {
         arr[i] = rand.nextInt(); // storing random integers in an array
         System.out.println("The element number "+i+" is: "+arr[i]); // printing each array element
         
      }
      System.out.println("The original array is: "+ Arrays.toString(arr));
      Arrays.sort(arr);
      System.out.println("The array after being sorted is: "+Arrays.toString(arr));
   }
}
